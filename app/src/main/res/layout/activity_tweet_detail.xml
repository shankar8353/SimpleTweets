<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.simpletweets.activities.TweetDetailActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivDetailProfile"
        tools:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User"
        android:id="@+id/tvDetailUser"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivDetailProfile"
        android:layout_toEndOf="@+id/ivDetailProfile"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Name"
        android:id="@+id/tvDetailScreenName"
        android:paddingRight="10dp"
        android:textColor="@color/colorGrey"
        android:layout_below="@+id/tvDetailUser"
        android:layout_toRightOf="@+id/ivDetailProfile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Body"
        android:id="@+id/tvDetailBody"
        android:linksClickable="true"
        android:autoLink="all"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        style="?android:listSeparatorTextViewStyle"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:layout_below="@+id/ivDetailProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22"
        android:id="@+id/tvRetweets"
        android:layout_below="@+id/tvDetailBody"
        android:paddingRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETWEETS"
        android:id="@+id/labelRetweets"
        android:layout_below="@+id/tvDetailBody"
        android:paddingRight="20dp"
        android:layout_toRightOf="@+id/tvRetweets"
        android:layout_toEndOf="@+id/tvRetweets"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:id="@+id/tvFavorites"
        android:paddingRight="5dp"
        android:layout_alignTop="@+id/labelRetweets"
        android:layout_toRightOf="@+id/labelRetweets"
        android:layout_toEndOf="@+id/labelRetweets"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAVORITES"
        android:id="@+id/labelFavorites"
        android:layout_alignTop="@+id/tvFavorites"
        android:layout_toRightOf="@+id/tvFavorites"
        android:layout_toEndOf="@+id/tvFavorites"/>

</RelativeLayout>
